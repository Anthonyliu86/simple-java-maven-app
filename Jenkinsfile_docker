pipeline {
    agent {
        label 'slave-1'
    }

    stages {
        stage('Build') {
            agent {
                docker { 
                    image 'maven' 
                    args '-v /root/.m2:/root/.m2'
                }
              
            }
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
       
       
    }
}
