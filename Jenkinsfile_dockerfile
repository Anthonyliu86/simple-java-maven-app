pipeline {
    agent { 
         dockerfile {
            additionalBuildArgs "-t maven-test1"
         }
         
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn -B -DskipTests clean package'
            }
        }
        
        stage('Test') {
            steps {
                sh 'mvn test'
                sh 'sleep 3m'
            }
        }
       
    }
}
